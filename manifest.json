{
    "name": "Fiber - URL Opener",
    "description": "Open higlihted text in a new tab",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "scripts/background.js"
    },
    "icons": {
        "128": "favicon.png"
    },
    "permissions": [
        "storage",
        "contextMenus",
        "tabs"
    ],
    "action": {
        "default_popup": "scripts/popup.html",
        "default_icon": {
            "32": "favicon.png"
        },
        "default_title": "Fiber - URL Opener"
    }
}